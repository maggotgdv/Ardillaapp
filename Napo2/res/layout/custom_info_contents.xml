<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:paddingLeft="0dp" >
   

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:padding="3dp"
        android:scaleType="fitStart"
        android:src="@drawable/napo_dscto" />

    <TextView
        android:id="@+id/title"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:text="titulo"
        android:textColor="#333333"
        android:textColorHint="#333333"
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="sans" />

    <TextView
        android:id="@+id/snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:text="snippet"
        android:textColor="#8C6900"
        android:textColorHint="#8C6900"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@+id/snippet"
        android:layout_toRightOf="@+id/imageView1"
        android:maxLines="2"
        android:maxWidth="170dp"
        android:paddingTop="7dp"
        android:text="Av. Dolores con Estados Unidos A5"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#664C00"
        android:textColorHint="#664C00"
        android:textSize="13sp"
        android:textStyle="normal"
        android:typeface="sans"
        android:width="170dp" />

    

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:paddingLeft="5dp"
        android:text="Abierto"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#85B854"
        android:textSize="10sp" />
 <ImageView
        android:id="@+id/imageView2"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/title"
        android:layout_toRightOf="@+id/title"
        android:paddingBottom="10dp"
        android:paddingTop="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/abierto" />

 <ImageView
     android:id="@+id/imageView3"
     android:layout_width="60dp"
     android:layout_height="50dp"
     android:layout_below="@+id/textView2"
     android:layout_toRightOf="@+id/title"
     android:paddingLeft="30dp"
     android:scaleType="fitCenter"
     android:src="@drawable/flecha" />

</RelativeLayout>